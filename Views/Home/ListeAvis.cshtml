@model List<TPLOCAL1.Models.Avis>

@{
    ViewData["Title"] = "Liste des avis";

    ViewData["Css"] = "ListeAvis.css";

    Dictionary<string, string> menus = new Dictionary<string, string>{
        { "Acceuil", "/Home/Index" }, 
        { "Formulaire", "/Home/Index/Formulaire" }};
    ViewData["Menus"] = menus;
}

<table>
    <caption>Liste</caption>
    <tr>
        <td>Nom</td>
        <td>Prénom</td>
        <td>Avis donné</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(m => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(m => item.Prenom)
            </td>

            @{
                var color = "red";
                var txtcolor = "black";
                if (item.AvisDonne == "O")
                {
                    color = "green";
                    txtcolor = "white";
                }
            }
            <td style="background-color: @color; color: @txtcolor">
                @Html.DisplayFor(m => item.AvisDonne)
            </td>
        </tr>
    }
</table>
