@model TPLOCAL1.Models.FormulaireModel
@Html.ValidationSummary(false, "", new { @class = "text-danger" })

@{
    ViewData["Title"] = "Formulaire TP HN Avis";

    ViewData["Css"] = "Formulaire.css";

    Dictionary<string, string> menus = new Dictionary<string, string>{
        { "Acceuil", "/Home/Index" },
        { "Liste avis", "/Home/Index/ListeAvis" }};
    ViewData["Menus"] = menus;
}

@using (Html.BeginForm("Formulaire", "Home", FormMethod.Post, ""))
{
    <table>
        <caption>Informations personelles</caption>
        <tr>
            <td>Nom</td>
            <td>
                @Html.TextBoxFor(m => m.Nom)
            </td>
        </tr>
        <tr>
            <td>Prénom</td>
            <td>
                @Html.TextBoxFor(m => m.Prenom)
            </td>
        </tr>
        <tr>
            <td>Sexe</td>
            <td>
                @Html.DropDownListFor(m => m.Sexe, new SelectList(TPLOCAL1.Models.FormulaireModel.Sexes))
            </td>
        </tr>
        <tr>
            <td>Adresse</td>
            <td>
                @Html.TextBoxFor(m => m.Adresse)
            </td>
        </tr>
        <tr>
            <td>Code Postal</td>
            <td>
                @Html.TextBoxFor(m => m.CodePostal)
            </td>
        </tr>
        <tr>
            <td>Ville</td>
            <td>
                @Html.TextBoxFor(m => m.Ville)
            </td>
        </tr>
        <tr>
            <td>Adresse mail</td>
            <td>
                @Html.TextBoxFor(m => m.Mail)
            </td>
        </tr>
    </table>
    
    <table>
        <caption>Informations formation suivie</caption>
        <tr>
            <td>Date début formation</td>
            <td>
                @Html.TextBoxFor(m => m.Date, "{0:yyyy-MM-dd}", new { @class = "input", @type = "date" })
            </td>
        </tr>
        <tr>
            <td>Formation suivie</td>
            <td>
                @Html.DropDownListFor(m => m.Formation, new SelectList(TPLOCAL1.Models.FormulaireModel.Formations))
            </td>
        </tr>
    </table>
    
    <table>
        <caption>Avis sur la formation</caption>
        <tr>
            <td>Formation Cobol</td>
            <td>
                @Html.TextBoxFor(m => m.AvisCobol)
            </td>
        </tr>
        <tr>
            <td>Formation C#</td>
            <td>
                @Html.TextBoxFor(m => m.AvisSharp)
            </td>
        </tr>
    </table>
    <input type="submit" value="Valider" />
}
